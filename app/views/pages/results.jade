extends ../layout
block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3
                        span(style='color:red') #{keyword}
                        span 的结果
                        span 共#{totalSize}条
                .panel-body
                    if movies &&movies.length>0
                        each item in movies
                            .col-md-2
                                +movieItemTemplate(item)
                    else
                        +noDataShow
            ul.pagination
                -for(var i=0;i<totalPage;i++){
                    -if (currentPage==(i+1)){
                        li.active
                            span #{currentPage}
                    -}
                    -else{
                        li
                            a(href='/results?#{query}&page=#{i}') #{i+1}
                    -}
                -}
    include ../includes/template/item_movie_template