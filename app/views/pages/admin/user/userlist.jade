extends ../../../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 头像
                        th 名字
                        th 时间
                        //th 更新
                        th 查看
                        //th 删除
                tbody
                    each item in users
                        tr(class='item-id-#{item._id}')
                            td: +showUserImg(100,item.headPicUrl,item.name)
                            td #{item.name}
                            td #{moment(item.meta.updatAt).format('MM/DD/YYYY  HH:mm:ss')}
                            td: a(target='_blank',href='/user/#{item._id}') 查看
                            //td: a(target='_blank',href='/admin/update/#{item._id}') 修改
                            //td
                                button.btn.btn-danger.del(type='button',data-id='#{item._id}') 删除
    include ../../../includes/template/item_user_img
